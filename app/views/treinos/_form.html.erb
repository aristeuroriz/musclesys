
	<%= bootstrap_form_for(@treino, inline_errors: true) do |f| %>
	
	<%= f.alert_message "Por favor, preencha corretamente os campos marcados.", error_summary: true %>

	<%= f.select :grupo_muscular, [[nil],["Peitoral"], ["Costas"], ["Braços"], ["Ombros"], ["Abdómen"], ["Pernas"]],
	label: 'Grupo muscular' %>

	<%= f.text_field :desc_exercicio, label: 'Exercício' %>

	<%= f.select :carga, [[nil],["Muito leve"], ["Leve"], ["Moderado"], ["Pesado"], ["Muito pesado"]],label:
	'Carga' %>

	<%= f.number_field :serie, label: "Séries"%>

	<%= f.number_field :repeticoes, label: "Repetições"%>

	<%= f.submit "Salvar",  class: "btn btn-success btn-lg pull-right " %>
	
	<% end %>
