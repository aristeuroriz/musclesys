	<%= include_gon %>
	<%= csrf_meta_tags %>
</head>
<body>

	<div id="wrap">
		<header>	
			
			<%= render 'layouts/header' %>
			
		</header>

		<div id="main" role="main">

			<div class="container">
				<div class="content">
					<div class="row-fluid">

						<div class="text-center">
							
							<%= bootstrap_flash %> 
							
						</div>

						<%= yield %>

					</div>

					<br><br>

					<div class="col-md-4 col-md-offset-8 text-center">

						<%= breadcrumbs pretext: "Você está aqui: ", display_single_fragment: false, style: :bootstrap, separator: "" %>
					</div>

				</div>
			</div>

		</div>
	</div>
	
	<%= render 'layouts/footer' %>


