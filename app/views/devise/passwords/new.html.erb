<div class='container centralizado'>
	<div class="txt-centro">
<h2>Esqueceu sua senha?</h2>
</div>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, label: "Email", autofocus: true %>

    <%= f.submit "Recuperar" , class: "btn btn-primary center-block"%>
    <br><br><br>

<% end %>

<%= render "devise/shared/links" %>

</div>
