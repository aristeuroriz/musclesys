 <div class="col-md-6 col-md-offset-3 text-left">
	<div class="text-center">
<h2>Mudar sua senha</h2>
</div>

    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

        <%= f.password_field :password, label: "Nova senha", autofocus: true, autocomplete: "off" %>

        <%= f.password_field :password_confirmation, label: "Confirme sua nova senha" , autocomplete: "off" %>

        <%= f.submit "Mudar minha senha", class: 'btn btn-primary center-block' %>
      
    <br><br><br>

    <% end %>

<%= render "devise/shared/links" %>

</div>