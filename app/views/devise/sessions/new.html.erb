<center>
  <h2>Entrar</h2>
</center>
<div class="container centralizado">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :default) do |f| %>

  <%= f.email_field :email,label: 'E-mail',  autofocus: true%>

  <%= f.password_field :password,label: 'Senha' , autocomplete: "off"%>

  <% if devise_mapping.rememberable? -%>

  <%= f.check_box :remember_me, label: "Lembrar" %>
  <% end -%>
  <center>
    <%= f.submit "Entrar", class: "btn btn-success btn-large"%>
  </center>
  <br><br>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
